<odoo>
  <data>

     <!-- Vista de formulario de Pacientes -->
    <record id="view_hospital_pacientes_form" model="ir.ui.view">
        <field name="name">hospital.pacientes.form</field>
        <field name="model">hospital.pacientes</field>
        <field name="arch" type="xml">
            <form string="Paciente">
                <sheet>
                    <group>
                        <field name="name" string="Nombre"/>
                        <field name="last_name" string="Apellidos"/>
                        <field name="sintomas" string="Síntomas"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_pacientes_list" model="ir.ui.view">
        <field name="name">hospital.pacientes.list</field>
        <field name="model">hospital.pacientes</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Nombre"/>
                <field name="last_name" string="Apellidos"/>
                <field name="sintomas" string="Síntomas"/>
            </list>
        </field>
    </record>

  </data>
</odoo>